  "description": "Fetch Anime and Manga Details from Anilist.Co within telegram",
  "main": "src/server.ts",
  "scripts": {
    "build": "rimraf build && tsc --project tsconfig.build.json",
    "start": "node ./build/server",
    "test": "rimraf build && tsc --project tsconfig.json && ava",
    "prettify": "prettier --write \"./src/**/*.ts\"",
    "lint": "eslint ./src/**/*.ts",
    "dev": "nodemon src/server.ts"
  },
