    "grammy": "^1.8.3",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@grammyjs/types": "github:grammyjs/types",
    "@types/express": "^4.17.13",
    "@types/node": "17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "optionalDependencies": {
